rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permetti upload foto profilo
    match /profile_photos/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        request.resource.size < 5 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');
    }



    // Video onboarding (solo admin)
    match /onboarding/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
        exists(/databases/$(database)/documents/roles/superadmins) &&
        request.auth.uid in get(/databases/$(database)/documents/roles/superadmins).data.uids &&
        request.resource.size < 100 * 1024 * 1024 && // 100MB per video onboarding
        request.resource.contentType.matches('video/.*');
    }
    match /clients/{userId}/anamnesi_photos/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId &&
                    request.resource.size < 5 * 1024 * 1024 &&
                    request.resource.contentType.matches('image/.*');
    }
    match /clients/{userId}/checks/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId &&
                    request.resource.size < 5 * 1024 * 1024 &&
                    request.resource.contentType.matches('image/.*');
    }
  }
}