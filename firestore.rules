rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== FUNZIONI DI SUPPORTO ====================
    function isValidPayment() {
      return request.resource.data.keys().hasAll(['amount', 'duration', 'paymentDate']) &&
             request.resource.data.amount is number &&
             request.resource.data.amount > 0 &&
             request.resource.data.duration is string &&
             request.resource.data.paymentDate is timestamp &&
             (!request.resource.data.keys().hasAny(['paymentMethod']) || request.resource.data.paymentMethod is string);
    }

    function isSuperAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/roles/superadmins) &&
             request.auth.uid in get(/databases/$(database)/documents/roles/superadmins).data.uids;
    }

    function isAdmin() {
      return isSuperAdmin() ||
             (request.auth != null && (
               !exists(/databases/$(database)/documents/roles/admins) ||
               (exists(/databases/$(database)/documents/roles/admins) &&
                request.auth.uid in get(/databases/$(database)/documents/roles/admins).data.uids)
             ));
    }

    function isCoach() {
      return isAdmin() ||
             (request.auth != null &&
              exists(/databases/$(database)/documents/roles/coaches) &&
              request.auth.uid in get(/databases/$(database)/documents/roles/coaches).data.uids);
    }

    function isClient(userId) {
      return request.auth != null &&
             request.auth.uid == userId &&
             exists(/databases/$(database)/documents/clients/$(userId)) &&
             get(/databases/$(database)/documents/clients/$(userId)).data.isClient == true;
    }

    function isAssignedCoach(userId) {
      return request.auth != null &&
             exists(/databases/$(database)/documents/clients/$(userId)) &&
             (get(/databases/$(database)/documents/clients/$(userId)).data.assignedCoaches || []).hasAny([request.auth.uid]);
    }

    function isCollaboratore(userId) {
      return request.auth != null &&
             request.auth.uid == userId &&
             exists(/databases/$(database)/documents/collaboratori/$(userId));
    }

    function isSetter() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/collaboratori/$(request.auth.uid)).data.role == 'Setter';
    }

    // ==================== CLIENTS & SUBCOLLEZIONI ====================
    match /clients/{userId} {
      allow create: if isSuperAdmin() || isCoach() || isAdmin();
      allow read: if isSuperAdmin() ||
                    (request.auth != null && (
                      request.auth.uid == userId ||
                      isCoach() ||
                      isAdmin() ||
                      (get(/databases/$(database)/documents/clients/$(userId)).data.isOldClient == true && isAssignedCoach(userId))
                    ));
      allow list: if isSuperAdmin() || isCoach() || isAdmin();
      allow update: if isSuperAdmin() || isCoach() || isAdmin() || isClient(userId);
      allow delete: if isSuperAdmin() || isAdmin();

      match /anamnesi/{docId} {
        allow read, write: if request.auth != null && (
                              request.auth.uid == userId ||
                              isCoach() ||
                              isAdmin() ||
                              (get(/../clients/$(userId)).data.isOldClient == true && isAssignedCoach(userId))
                            );
      }

      match /checks/{docId} {
        allow read, write: if request.auth != null && (
                              request.auth.uid == userId ||
                              isCoach() ||
                              isAdmin() ||
                              (get(/../clients/$(userId)).data.isOldClient == true && isAssignedCoach(userId))
                            );
      }

      match /payments/{docId} {
        allow read: if request.auth != null && (
                      request.auth.uid == userId ||
                      isCoach() ||
                      isAdmin() ||
                      (get(/../clients/$(userId)).data.isOldClient == true && isAssignedCoach(userId))
                    );
        allow create, update: if (isCoach() || isAdmin()) && isValidPayment();
        allow delete: if isCoach() || isAdmin();
      }
    }

    // --- COLLECTION GROUP: PAGAMENTI (per incasso lordo) ---
    match /{path=**}/payments/{paymentId} {
      allow read: if isAdmin();
    }

    // --- COLLECTION GROUP: CHECKS & ANAMNESI ---
    match /{path=**}/checks/{checkId} {
      allow read: if isCoach() || isAdmin();
    }
    match /{path=**}/anamnesi/{anamnesiId} {
      allow read: if isCoach() || isAdmin();
    }

    // ==================== CHAT ====================
    // Ogni utente ha pieno controllo della propria area chat privata
    // REQUISITO: profilo community completo (nome + foto)
    function hasCompleteProfile(userId) {
      return exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.name != null &&
             get(/databases/$(database)/documents/users/$(userId)).data.name != '' &&
             get(/databases/$(database)/documents/users/$(userId)).data.photoURL != null &&
             get(/databases/$(database)/documents/users/$(userId)).data.photoURL != '';
    }

    match /chats/{chatId} {
      // Lettura: solo partecipanti della chat con profilo completo
      allow read: if request.auth != null && 
                    request.auth.uid in resource.data.participants &&
                    hasCompleteProfile(request.auth.uid);
      
      // Lista: solo le proprie chat con profilo completo
      allow list: if request.auth != null &&
                    hasCompleteProfile(request.auth.uid);
      
      // Creazione: l'utente deve essere tra i partecipanti e avere profilo completo
      allow create: if request.auth != null &&
                      request.auth.uid in request.resource.data.participants &&
                      request.resource.data.participants.size() == 2 &&
                      hasCompleteProfile(request.auth.uid);
      
      // Modifica: solo i partecipanti con profilo completo
      allow update: if request.auth != null && 
                      request.auth.uid in resource.data.participants &&
                      hasCompleteProfile(request.auth.uid);
      
      // Eliminazione: solo i partecipanti con profilo completo
      allow delete: if request.auth != null && 
                      request.auth.uid in resource.data.participants &&
                      hasCompleteProfile(request.auth.uid);

      // Messaggi: pieno controllo per i partecipanti con profilo completo
      match /messages/{messageId} {
        // Lettura messaggi: solo partecipanti della chat con profilo completo
        allow read: if request.auth != null &&
                      request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants &&
                      hasCompleteProfile(request.auth.uid);
        
        // Invio messaggi, foto, audio, video: solo partecipanti con profilo completo
        allow create: if request.auth != null &&
                        request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants &&
                        hasCompleteProfile(request.auth.uid);
        
        // Modifica messaggi: solo l'autore con profilo completo
        allow update: if request.auth != null && 
                        resource.data.senderId == request.auth.uid &&
                        hasCompleteProfile(request.auth.uid);
        
        // Eliminazione messaggi: solo l'autore con profilo completo
        allow delete: if request.auth != null && 
                        resource.data.senderId == request.auth.uid &&
                        hasCompleteProfile(request.auth.uid);
      }
    }

    // ==================== RUOLI & DATI APP ====================
    match /roles/{docId} {
      allow read: if request.auth != null;
      allow write: if isSuperAdmin() || isAdmin();
    }

    match /app-data/{docId} {
      allow read, write: if isCoach() || isAdmin();
    }

    // ==================== COLLABORATORI ====================
    match /collaboratori/{collabId} {
      allow read, list: if isAdmin() || isCollaboratore(collabId) || isSetter();
      allow create: if isAdmin();
      allow update: if isCollaboratore(collabId) || isAdmin();
      allow delete: if isAdmin();
    }

    // ==================== PAGAMENTI VECCHI ====================
    match /pagamenti/{paymentId} {
      allow read, write: if isAdmin();
    }

    // ==================== REPORTS ====================
    match /marketingReports/{reportId} {
      allow read, list, create, update, delete: if isAdmin();
    }
    match /salesReports/{reportId} {
      allow read, list, create, update, delete: if isAdmin();
    }
    match /settingReports/{reportId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // ==================== LEADS ====================
    match /leads/{leadId} {
      allow read, list: if isAdmin() ||
        (request.auth != null &&
         exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid)) &&
         resource.data.collaboratoreId == request.auth.uid);
      allow create: if request.auth != null &&
        exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid)) &&
        request.resource.data.collaboratoreId == request.auth.uid;
      allow update: if isAdmin() ||
        (request.auth != null &&
         exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid)) &&
         resource.data.collaboratoreId == request.auth.uid);
      allow delete: if isAdmin() ||
        (request.auth != null &&
         exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid)) &&
         resource.data.collaboratoreId == request.auth.uid);
    }

    // ==================== GUIDE & LEAD FORM ====================
    match /guides/{guideId} {
    // TUTTI POSSONO LEGGERE LE GUIDE ATTIVE (senza auth)
     allow read: if resource != null && resource.data.active == true;
     allow list: if true;
     allow create, update, delete: if isAdmin();
    }

   match /guideLeads/{leadId} {
   // Chiunque può creare un lead (form pubblico)
    allow create: if true;

   // Solo Admin, Coach, Setter possono leggere/modificare
    allow read, list: if isAdmin() || isCoach() || isSetter();
    allow update, delete: if isAdmin();
   }

    // ==================== DIPENDENTI & PROVVIGIONI ====================
    match /dipendenti_provvigioni/{docId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    match /pagamenti_dipendenti/{docId} {
      allow read, list, create, update, delete: if isAdmin();
    }

    // ==================== CALENDARIO EVENTI ====================
    match /calendarEvents/{eventId} {
      // Leggi: admin o qualunque collaboratore (visibilità generale del calendario)
      allow read: if request.auth != null && (
        isAdmin() ||
        exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid))
      );

      // Lista: admin e tutti i collaboratori
      allow list: if request.auth != null && (
        isAdmin() ||
        exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid))
      );

      // Crea: admin o qualunque collaboratore
      allow create: if request.auth != null && (
        isAdmin() ||
        exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid))
      );

      // Modifica: admin o qualunque collaboratore
      allow update: if request.auth != null && (
        isAdmin() ||
        exists(/databases/$(database)/documents/collaboratori/$(request.auth.uid))
      );

      // Elimina: admin o creatore dell'evento
      allow delete: if request.auth != null && (
        isAdmin() ||
        resource.data.createdBy == request.auth.uid
      );
    }

    // ==================== FCM TOKENS (per notifiche) ====================
    match /fcmTokens/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if isAdmin();
    }

    // ==================== NOTIFICATIONS ====================
    match /notifications/{notificationId} {
      // Utenti possono leggere solo le proprie notifiche
      allow read: if request.auth != null && 
                    resource.data.userId == request.auth.uid;
      
      // Lista: solo le proprie notifiche
      allow list: if request.auth != null;
      
      // Creazione: qualsiasi utente autenticato può creare notifiche (per videocall, etc.)
      allow create: if request.auth != null;
      
      // Modifica: solo il destinatario può aggiornare (marcare come letta)
      allow update: if request.auth != null && 
                      resource.data.userId == request.auth.uid;
      
      // Eliminazione: solo il destinatario può eliminare le proprie notifiche
      allow delete: if request.auth != null && 
                      resource.data.userId == request.auth.uid;
    }

    // ==================== USER STATUS (PRESENZA ONLINE) ====================
    match /userStatus/{userId} {
      // Tutti gli utenti autenticati possono leggere lo stato di presenza
      allow read: if request.auth != null;
      
      // Solo l'utente stesso può aggiornare il proprio stato
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ==================== COMMUNITY ====================
    match /community_posts/{postId} {
      // Tutti gli utenti autenticati possono leggere i post
      allow read, list: if request.auth != null;
      
      // Utenti autenticati possono creare post
      allow create: if request.auth != null && 
                      request.resource.data.authorId == request.auth.uid;
      
      // Solo l'autore o admin/superadmin possono modificare/eliminare
      allow update, delete: if request.auth != null && (
        resource.data.authorId == request.auth.uid ||
        isSuperAdmin() ||
        isAdmin()
      );

      // Commenti sui post (subcollection)
      match /comments/{commentId} {
        allow read, list: if request.auth != null;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && (
          resource.data.authorId == request.auth.uid ||
          isSuperAdmin() ||
          isAdmin()
        );
      }
    }

    // Commenti community (collection separata)
    match /community_comments/{commentId} {
      allow read, list: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.authorId == request.auth.uid ||
        isSuperAdmin() ||
        isAdmin()
      );
    }

    // Reports community
    match /community_reports/{reportId} {
      allow read, list: if isSuperAdmin() || isAdmin();
      allow create: if request.auth != null;
      allow update, delete: if isSuperAdmin() || isAdmin();
    }

    // Settings della community (globali e per utente)
    match /settings/{docId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Canali community (solo admin può gestirli)
    match /communityChannels/{channelId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    }

    // Users collection (per dati community: livello, likes, onboarding)
    match /users/{userId} {
      // Tutti possono leggere i profili pubblici
      allow read, list: if request.auth != null;

      // L'utente stesso può creare/modificare il proprio profilo, oppure admin/superadmin possono modificare qualsiasi profilo
      allow create, update: if request.auth != null && (
        request.auth.uid == userId ||
        isSuperAdmin() ||
        isAdmin()
      );

      // Solo admin può eliminare
      allow delete: if isAdmin();
    }

    // Chat community avanzata
    match /community_chat/{messageId} {
      // Tutti gli utenti autenticati possono leggere i messaggi
      allow read, list: if request.auth != null;

      // Admin, superadmin e coach possono sempre scrivere
      // Gli altri utenti possono scrivere solo se hanno un profilo community completo
      allow create: if request.auth != null &&
                      request.resource.data.authorId == request.auth.uid &&
                      (isSuperAdmin() || isAdmin() || isCoach() ||
                       (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.name != null &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.name != '' &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.photoURL != null &&
                        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.photoURL != ''));

      // Solo l'autore o admin possono modificare/eliminare
      allow update, delete: if request.auth != null && (
        resource.data.authorId == request.auth.uid ||
        isSuperAdmin() ||
        isAdmin()
      );
    }

    // Presenza online degli utenti
    match /presence/{userId} {
      // Tutti possono leggere la presenza online
      allow read, list: if request.auth != null;

      // Solo l'utente stesso può aggiornare la propria presenza
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Indicatori di digitazione
    match /typing/{userId} {
      // Tutti possono leggere gli indicatori di digitazione
      allow read, list: if request.auth != null;

      // Solo l'utente stesso può gestire i propri indicatori
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Courses collection (corsi community)
    match /courses/{courseId} {
      // Tutti gli utenti autenticati possono leggere i corsi
      allow read, list: if request.auth != null;

      // Solo admin può creare/modificare/eliminare corsi
      allow create, update, delete: if isAdmin();
    }

    // Schede alimentazione (per Smart Meal Swap)
    match /schede_alimentazione/{schedaId} {
      allow read: if request.auth != null && (
        isAdmin() ||
        isCoach() ||
        resource.data.clientId == request.auth.uid
      );
      allow create, update: if isAdmin() || isCoach();
      allow delete: if isAdmin();
    }

    // Schede allenamento
    match /schede_allenamento/{schedaId} {
      allow read: if request.auth != null && (
        isAdmin() ||
        isCoach() ||
        resource.data.clientId == request.auth.uid
      );
      allow create, update: if isAdmin() || isCoach();
      allow delete: if isAdmin();
    }

    // ==================== BLOCCA TUTTO IL RESTO ====================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}